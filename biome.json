{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"__snapshots__",
			".next",
			"tsconfig*.json",
			"package.json"
		],
		"include": [
			"e2e",
			"src",
			"next.config.ts",
			"jest.config.ts",
			"jest.setup.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2
		},
		"linter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2
		}
	}
}
